<!-- Layout för små skärmar -->
<MudHidden Breakpoint="Breakpoint.MdAndUp">

    <MudCard Style="overflow: hidden; border: 1px solid gray;">
        <MudCardMedia Image="@ImageUrl"
                      Style="object-fit: cover; Height:300px;" />

        <MudCardContent>
            <MudText Typo="Typo.h6">@Title</MudText>
            <MudText Typo="Typo.body1"><b>@CurrentPrice</b></MudText>
            <MudText Typo="Typo.body2" Class="description-truncate">
                @Description
            </MudText>
        </MudCardContent>

        <MudCardActions>
            @ChildContent
        </MudCardActions>
    </MudCard>
</MudHidden>

<style>
    .description-truncate {
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        text-overflow: ellipsis;
    }
</style>

@code {
    [Parameter] public string ImageUrl { get; set; }
    [Parameter] public string Title { get; set; }
    [Parameter] public string CurrentPrice { get; set; }
    [Parameter] public int Area { get; set; }
    [Parameter] public int? BiArea { get; set; }
    [Parameter] public int Room { get; set; }
    [Parameter] public int? Floor { get; set; }
    [Parameter] public int FloorRow { get; set; }
    [Parameter] public string MonthlyFee { get; set; }
    [Parameter] public string OperatingCost { get; set; }
    [Parameter] public string[] Facilities { get; set; }
    [Parameter] public string City { get; set; }
    [Parameter] public string Commune { get; set; }

    [Parameter] public string Description { get; set; }

    [Parameter] public string AgencyName { get; set; }


    [Parameter] public RenderFragment? ChildContent { get; set; }
}
