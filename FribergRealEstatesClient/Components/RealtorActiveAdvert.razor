<!-- Layout för större skärmar -->
<MudHidden Breakpoint="Breakpoint.SmAndDown">

    <MudCard Style="height: 300px; display: flex; flex-direction: row; overflow: hidden; border: 1px solid gray;">
        <MudCardMedia Image="@ImageUrl" Style="width: 200px; height: 100%; object-fit: cover;" />

        <div style="flex: 1; display: flex; flex-direction: column; padding: 16px; height: 100%;">
            <div>
                <MudText Typo="Typo.h6">@Title</MudText>
            </div>
            <div>
                
                <MudText Typo="Typo.body2" Style="color: gray"><MudIcon Icon="fas fa-home" Color="Color.Primary" />
                    &nbsp @City, @Commune kommun
                </MudText>
            </div>
            <div class="row">
                <div style="display: flex; flex-direction: row; justify-content: space-between; height: 100%; width: 80%">
                    <MudText Typo="Typo.body1"><b>@CurrentPrice kr</b></MudText>
                    <MudText Typo="Typo.body1">
                        <b>
                            @Area m²@if (BiArea != null && BiArea > 0)
                            {
                                   <span>+ @BiArea m²</span>
                            }
                        </b>
                    </MudText>
                    <MudText Typo="Typo.body1"><b>@Room rum</b></MudText>
                    <MudText Typo="Typo.body1">
                        <b>
                            @if (Floor != null && Floor >= 1)
                            {
                                <span>vån @Floor/@FloorRow</span>
                            }
                        </b>
                    </MudText>

                </div>
            </div>
            <div>
                <div style="display: flex; flex-direction: row; justify-content: space-between; height: 100%; width: 40%">
                    <MudText Typo="Typo.body2" Style="color: gray">@MonthlyFee kr/mån</MudText>
                    <MudText Typo="Typo.body2" Style="color: gray">@OperatingCost kr/m²</MudText>
                </div>
            </div>

            <div style="flex: 1; display: flex; align-items: center;">
                <MudText Typo="Typo.subtitle2" Class="description-truncate">
                    @Description
                </MudText>
            </div>
            <div>
                @if (Facilities != null && Facilities.Length > 0)
                {
                    foreach (var item in Facilities)
                    {
                        <MudChip T="string" Variant="Variant.Outlined">@item</MudChip>
                    }
                }                
            </div>
            <hr />
            <div>
                <MudText Typo="Typo.h6" Style="color: gray">@AgencyName</MudText>
            </div>
        </div>
    </MudCard>
</MudHidden>

