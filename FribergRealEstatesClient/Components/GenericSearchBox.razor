<MudPaper Class="p-4"
		  Elevation="3"
		  Style="background-color: #273845; width: 400px; margin-right: 0px; border-radius: 15px; box-shadow: 0 4px 10px #000000">
	<div class="SearchBox-content">
		<MudItem>
			<!-- SearchBox Title -->			
    <MudText Typo="Typo.h5" 
		Class="mb-4" 
		Style="color: #ae9d65; font-weight: bold; text-align: center; text-shadow: 0 4px 10px #000000; text: linear-gradient(135deg, #ae9d65, #cfc08a); text-fill-color: transparent; font-family: 'Open Sans', sans-serif;">@_searchTitle</MudText>

			<!-- SearchBox InputField -->
			<MudItem xs="12" Class="mb-4">
				<MudTextField @bind-Value="_searchTerm"
							  Placeholder="Sök..."
							  Clearable="true"
							  Underline="false"
							  Class="residence-searchfield"
							  Style="min-height: 50px; width: 100%;; text-transform: none; background-color: white; color: black; border-radius: 15px; padding: 10px;  box-shadow: 0 4px 10px #000000"
							  Adornment="Adornment.End"
							  AdornmentIcon="@Icons.Material.Filled.Search" />
			</MudItem>
			

			<!-- SearchBox SearchButton -->
			<div class="mt-4 text-center">
				<MudButton Variant="Variant.Filled"
						   FullWidth="true"
						   OnClick="SubmitSearch"
						   Class="search-button"
						   Style="background-color: #ae9d65; -webkit-text-fill-color: white; min-height: 50px; border-radius: 15px; font-size: 16px;">
					Sök
				</MudButton>
			</div>
		</MudItem>
	</div>
</MudPaper>


@code {
	[Parameter] public string _searchTerm { get; set; } = "";

	[Parameter] public string _searchTitle { get; set; }

	[Parameter]	public EventCallback<string> OnSearch { get; set; }

	private async Task SubmitSearch()
	{
		if (!string.IsNullOrWhiteSpace(_searchTerm))
			await OnSearch.InvokeAsync(_searchTerm);
	}
}
