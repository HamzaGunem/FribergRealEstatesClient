@page "/admindashboard"


<MudPaper Class="pa-10 ma-2">
    <MudText Typo="Typo.h3" Style="text-align:center; justify-content:center; align-items:center;">ADMIN DASHBOARD</MudText>
</MudPaper>

<MudContainer Class="mt-16 px-8" MaxWidth="MaxWidth.False">
    <MudGrid>
        <MudItem xs="12" sm="6" md="6">
            <MudPaper Elevation="3" Class="pa-4">
                <MudExpansionPanels>
                    <MudExpansionPanel Text="Bostäder" Style="text-align:center;" MaxHeight="300" Expanded="false">
                        <MudList T="string" Style="background-color: white;">
                            <MudDivider />
                            <MudListItem>Skapa</MudListItem>
                            <MudDivider />
                            <MudListItem>Ändra</MudListItem>
                            <MudDivider />
                            <MudListItem>Ta bort</MudListItem>
                        </MudList>
                    </MudExpansionPanel>
                </MudExpansionPanels>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="6" md="6">
            <MudPaper Elevation="3" Class="pa-4">
                <MudExpansionPanels>
                    <MudExpansionPanel Text="Mäklare" Style="text-align:center;" MaxHeight="300" Expanded="false">
                        <MudList T="string" Style="background-color: white;">
                            <MudDivider />
                            <MudListItem>Godkänna konton</MudListItem>
                            <MudDivider />
                            <MudListItem>Skapa</MudListItem>
                            <MudDivider />
                            <MudListItem>Ändra</MudListItem>
                            <MudDivider />
                            <MudListItem>Ta bort</MudListItem>
                        </MudList>
                    </MudExpansionPanel>
                </MudExpansionPanels>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="6">
            <MudPaper Elevation="3" Class="pa-4">
                <MudExpansionPanels>
                    <MudExpansionPanel Text="Mäklarbyrå" Style="text-align:center;" MaxHeight="300" Expanded="false">
                        <MudList T="string" Style="background-color: white;">
                            <MudDivider />
                            <MudListItem>Skapa</MudListItem>
                            <MudDivider />
                            <MudListItem>Ändra</MudListItem>
                            <MudDivider />
                            <MudListItem>Koppla mäklare</MudListItem>
                            <MudDivider />
                            <MudListItem>Ta bort</MudListItem>
                        </MudList>
                    </MudExpansionPanel>
                </MudExpansionPanels>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="6">
            <MudPaper Elevation="3" Class="pa-4">
                <MudExpansionPanels>
                    <MudExpansionPanel Text="Annonser" Style="text-align:center;" MaxHeight="300" Expanded="false">
                        <MudList T="string" Style="background-color: white;">
                            <MudListItem>Skapa</MudListItem>
                            <MudDivider />
                            <MudListItem>Ändra</MudListItem>
                            <MudDivider />
                            <MudListItem>Ta bort</MudListItem>
                            <MudDivider />
                            <MudListItem>Ändra Mäklare</MudListItem>
                        </MudList>
                    </MudExpansionPanel>
                </MudExpansionPanels>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

<style>
    .mud-expand-panel-header {
        color: white; /* Change this to your desired color */
        background-color: var(--bg-baseblue-color);
    }

    .mud-expand-panel-content
    {
        background-color: whitesmoke;
    }

    .mud-divider
    {
        border-color: black;
    }
</style>
